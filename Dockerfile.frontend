# 构建阶段
FROM node:18 as build

WORKDIR /app

COPY frontend/ /app

RUN npm install && npm run build

# 生产环境使用 nginx
FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html

# 可选：自定义 nginx 配置（如你需要）
# COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
